<Window x:Class="CourseWorkMailClient.LoadLetters.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWorkMailClient.LoadLetters"
        mc:Ignorable="d"
        Title="Ожидайте" 
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" HorizontalAlignment="Center" x:Name="tbTitle"></TextBlock>
        <ProgressBar Grid.Row="1" IsIndeterminate="True"/>

        <TextBlock Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">Пожалуйста подождите</TextBlock>
    </Grid>
</Window>
