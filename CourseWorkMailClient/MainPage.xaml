<Page x:Class="CourseWorkMailClient.MainPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWorkMailClient"
        mc:Ignorable="d"
        WindowTitle="Почтовый клент" 
        Background="White"
        Foreground="Black"
        MinWidth="1200"
        MinHeight="650"
        Width="1200"
        Height="650"
        ShowsNavigationUI="False" 
        WindowWidth="1220"
        WindowHeight="685"
        FontSize="14">
    <Grid>
        <local:NavigateMenu Margin="10,10,990,0"/>
        <Button 
            Margin="1052,10,10,608"
            Content="Выйти"/>
        <ListBox 
                Margin="215,47,10,49"
                x:Name="lbMesList"/>
        <Button
                Margin="1052,608,10,10" 
                Content="Написать"
                x:Name="bWriteMes"
                Click="bWriteMes_Click"/>
        <Button 
                Margin="909,608,153,10" 
                Content="Прочитать"
                x:Name="bReadMes"
                IsEnabled="False"/>
        <Button 
                Margin="215,608,847,10" 
                Content="Обновить"
                x:Name="bUpdateMesList"
                IsEnabled="False"/>
    </Grid>
</Page>
